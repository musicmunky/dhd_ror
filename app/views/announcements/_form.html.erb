<% btntxt = new_or_edit == "edit" ? "Update Announcement" : "Add Announcement" %>

<%= form_for(@announcement, html: { class: "rails_form", style: 'height:330px;' }) do |f| %>
	<% if @announcement.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@announcement.errors.count, "error") %> prohibited this announcement from being saved:</h2>
			<ul>
			<% @announcement.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<input type="hidden" id="announcement_user_id" name="announcement[user_id]" value="<%= current_user.id %>" />
	<div class="field w100fl">
		<%= f.label :content %><br>
		<%= f.text_area :content, { class: "txt100", style: "height:150px;" } %>
	</div>
	<div class="field w100fl">
		<%= f.label "Active?", { style: "float:left;" } %>
		<%= f.check_box :active, { style: "margin-top:5px;display:block;float:left;margin-left:10px;" } %>
	</div>
	<div class="actions w100fl">
		<%= f.submit btntxt, { class: "btn btn-success", style: "float:left;width:175px;", onclick: "return checkAnnouncementForm();" } %>
		<%= link_to 'Back', announcements_path, { class: "btn btn-primary", style: "float:right;width:150px;" } %>
	</div>
<% end %>
