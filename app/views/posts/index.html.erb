<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Create date gmt</th>
      <th>Update date gmt</th>
      <th>Title</th>
      <th>Content</th>
      <th>Name</th>
      <th>Status</th>
      <th>Live date</th>
      <th>Guid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.author %></td>
        <td><%= post.create_date_gmt %></td>
        <td><%= post.update_date_gmt %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.name %></td>
        <td><%= post.status %></td>
        <td><%= post.live_date %></td>
        <td><%= post.guid %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

